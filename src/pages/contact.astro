---
import PageLayout from '../layouts/PageLayout.astro';
import { pagesSEO, defaultSiteConfig } from '../utils/seo';
import type { BreadcrumbItem } from '../utils/schema';

const seo = pagesSEO.contact;

const breadcrumbs: BreadcrumbItem[] = [
  { name: 'Home', url: defaultSiteConfig.siteUrl },
  { name: 'Contact', url: `${defaultSiteConfig.siteUrl}/contact/` }
];
---

<PageLayout
  title={seo.title!}
  description={seo.description!}
  breadcrumbs={breadcrumbs}
>
  <section class="section">
    <div class="container-site max-w-3xl">
      <header class="text-center mb-12 scroll-animate">
        <h1 class="mb-4">Get in Touch</h1>
        <p class="text-xl text-gray-300">
          Have a question or want to discuss your operations? I'd love to hear from you.
        </p>
      </header>

      <!-- Quick Actions -->
      <div class="grid sm:grid-cols-2 gap-6 mb-12 scroll-animate">
        <a href="/book/" class="glass-card p-6 text-center hover:border-accent-500 transition-colors group">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-accent-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-accent-400 transition-colors">Book a Discovery Call</h3>
          <p class="text-gray-400 text-sm">Free 15-minute call to discuss your situation</p>
        </a>

        <a href="mailto:hello@kadydennis.com" class="glass-card p-6 text-center hover:border-accent-500 transition-colors group">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-violet-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-violet-400 transition-colors">Email Directly</h3>
          <p class="text-gray-400 text-sm">hello@kadydennis.com</p>
        </a>
      </div>

      <!-- Contact Form -->
      <div class="scroll-animate">
        <div class="glass-card p-8">
          <h2 class="text-xl font-semibold text-white mb-6">Send a Message</h2>
          <form id="contact-form" class="space-y-6">
            <div class="grid sm:grid-cols-2 gap-6">
              <div class="input-group">
                <label for="name" class="label">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="input"
                  placeholder="Your name"
                />
              </div>

              <div class="input-group">
                <label for="email" class="label">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="input"
                  placeholder="your@email.com"
                />
              </div>
            </div>

            <div class="input-group">
              <label for="subject" class="label">What can I help you with?</label>
              <select id="subject" name="subject" class="input">
                <option value="">Select an option...</option>
                <option value="Done-For-You Systems">Done-For-You Systems</option>
                <option value="VIP Strategy Day">VIP Strategy Day</option>
                <option value="Workflow Audit">Workflow Audit</option>
                <option value="DIY Templates & Tools">DIY Templates & Tools</option>
                <option value="Other">Something else</option>
              </select>
            </div>

            <div class="input-group">
              <label for="message" class="label">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="input"
                placeholder="Tell me a bit about your situation..."
              ></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-full">
              Send Message
            </button>

            <p id="form-message" class="text-sm text-center hidden"></p>
          </form>
        </div>
      </div>

      <!-- Social Links -->
      <div class="mt-12 text-center scroll-animate">
        <p class="text-gray-400 mb-6">Connect with me on social media</p>
        <div class="flex justify-center gap-6">
          <a
            href="https://www.linkedin.com/in/kadydennis/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-accent-400 transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="https://www.facebook.com/kadydennistravel/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-accent-400 transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a
            href="https://www.instagram.com/kadyladytravels"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-accent-400 transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a
            href="https://www.youtube.com/@KadyDennisAI"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-accent-400 transition-colors"
            aria-label="YouTube"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
          <a
            href="https://x.com/kadydennis"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-accent-400 transition-colors"
            aria-label="X"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      const message = document.getElementById('form-message') as HTMLParagraphElement;

      if (!form) return;

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const nameInput = form.querySelector('#name') as HTMLInputElement;
        const emailInput = form.querySelector('#email') as HTMLInputElement;
        const subjectSelect = form.querySelector('#subject') as HTMLSelectElement;
        const messageInput = form.querySelector('#message') as HTMLTextAreaElement;
        const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;

        const name = nameInput?.value;
        const email = emailInput?.value;
        const subject = subjectSelect?.value;
        const msgText = messageInput?.value;

        if (!name || !email || !msgText) return;

        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';

        try {
          const response = await fetch('/api/contact/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              name,
              email,
              subject,
              message: msgText
            })
          });

          const result = await response.json();

          if (response.ok) {
            message.textContent = "Message sent! I'll get back to you within 24 hours.";
            message.classList.remove('hidden', 'text-rose-400');
            message.classList.add('text-accent-400');
            form.reset();
          } else {
            message.textContent = result.error || 'Something went wrong. Please try again.';
            message.classList.remove('hidden', 'text-accent-400');
            message.classList.add('text-rose-400');
          }
        } catch (error) {
          message.textContent = 'Something went wrong. Please try again.';
          message.classList.remove('hidden', 'text-accent-400');
          message.classList.add('text-rose-400');
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Send Message';
        }
      });
    });
  </script>
</PageLayout>
