---
import PageLayout from '../layouts/PageLayout.astro';
import { pagesSEO, defaultSiteConfig } from '../utils/seo';
import type { BreadcrumbItem } from '../utils/schema';

const seo = pagesSEO.contact;

const breadcrumbs: BreadcrumbItem[] = [
  { name: 'Home', url: defaultSiteConfig.siteUrl },
  { name: 'Contact', url: `${defaultSiteConfig.siteUrl}/contact/` }
];
---

<PageLayout
  title={seo.title!}
  description={seo.description!}
  breadcrumbs={breadcrumbs}
>
  <section class="section">
    <div class="container-site max-w-5xl">
      <header class="text-center mb-12 scroll-animate">
        <h1 class="mb-4">Let's Talk</h1>
        <p class="text-xl text-gray-300">
          Ready to fix your operations? Book a free discovery call or send a message. I respond within 24 hours.
        </p>
      </header>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Cal.com Inline Embed -->
        <div class="scroll-animate">
          <h2 class="mb-4">Book a Discovery Call</h2>
          <p class="text-gray-300 mb-6">
            15 minutes to discuss your situation and see if we're a good fit. No pitchâ€”just honest advice about whether my services make sense for you.
          </p>

          <!-- Cal.com Inline Embed -->
          <div class="glass-card rounded-xl overflow-hidden" style="min-height: 500px;">
            <div
              id="cal-inline-embed"
              style="width:100%;height:100%;min-height:500px;overflow:auto;"
            ></div>
          </div>

          <!-- Cal.com inline embed script -->
          <script is:inline type="text/javascript">
            (function (C, A, L) {
              let p = function (a, ar) { a.q.push(ar); };
              let d = C.document;
              C.Cal = C.Cal || function () {
                let cal = C.Cal;
                let ar = arguments;
                if (!cal.loaded) {
                  cal.ns = {};
                  cal.q = cal.q || [];
                  d.head.appendChild(d.createElement("script")).src = A;
                  cal.loaded = true;
                }
                if (ar[0] === L) {
                  const api = function () { p(api, arguments); };
                  const namespace = ar[1];
                  api.q = api.q || [];
                  if(typeof namespace === "string"){
                    cal.ns[namespace] = cal.ns[namespace] || api;
                    p(cal.ns[namespace], ar);
                    p(cal, ["initNamespace", namespace]);
                  } else p(cal, ar);
                  return;
                }
                p(cal, ar);
              };
            })(window, "https://app.cal.com/embed/embed.js", "init");

            Cal("init", "discovery-call", {origin:"https://app.cal.com"});

            Cal.ns["discovery-call"]("inline", {
              elementOrSelector: "#cal-inline-embed",
              calLink: "kady-dennis/discovery-call",
              layout: "month_view",
              config: {
                theme: "dark"
              }
            });

            Cal.ns["discovery-call"]("ui", {
              theme: "dark",
              styles: {
                branding: { brandColor: "#06b6d4" }
              },
              hideEventTypeDetails: false,
              layout: "month_view"
            });
          </script>
        </div>

        <!-- Contact Form -->
        <div class="scroll-animate">
          <h2 class="mb-4">Send a Message</h2>
          <p class="text-gray-300 mb-6">
            Questions? Not sure which service is right? Just want to say hi? Drop me a note.
          </p>

          <form id="contact-form" class="space-y-6">
            <div class="input-group">
              <label for="name" class="label">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="input"
                placeholder="Your name"
              />
            </div>

            <div class="input-group">
              <label for="email" class="label">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="input"
                placeholder="your@email.com"
              />
            </div>

            <div class="input-group">
              <label for="subject" class="label">What can I help you with?</label>
              <select id="subject" name="subject" class="input">
                <option value="">Select an option...</option>
                <option value="Done-For-You Systems">Done-For-You Systems</option>
                <option value="VIP Strategy Day">VIP Strategy Day</option>
                <option value="Workflow Audit">Workflow Audit</option>
                <option value="Templates & Resources">Templates & Resources</option>
                <option value="Other">Something else</option>
              </select>
            </div>

            <div class="input-group">
              <label for="message" class="label">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="input"
                placeholder="Tell me a bit about your situation..."
              ></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-full">
              Send Message
            </button>

            <p id="form-message" class="text-sm text-center hidden"></p>
          </form>
        </div>
      </div>

      <!-- Alternative Contact -->
      <div class="mt-16 text-center scroll-animate">
        <h2 class="mb-4">Prefer Email?</h2>
        <p class="text-gray-300 mb-4">
          You can reach me directly at:
        </p>
        <a
          href="mailto:hello@kadydennis.com"
          class="text-2xl font-medium text-accent-400 hover:text-accent-300"
        >
          hello@kadydennis.com
        </a>

        <!-- Social Links -->
        <div class="mt-8 flex justify-center gap-6">
          <a
            href="https://www.linkedin.com/in/kadydennis/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-accent-400 transition-colors"
            aria-label="LinkedIn"
          >
