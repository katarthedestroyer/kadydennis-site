---
import { getCollection } from 'astro:content';
import ResourceLayout from '../../layouts/ResourceLayout.astro';

export async function getStaticPaths() {
  const resources = await getCollection('resources');

  return resources.map((resource) => ({
    params: { slug: resource.data.slug || resource.slug },
    props: { resource }
  }));
}

const { resource } = Astro.props;
const { Content } = await resource.render();

const slug = resource.data.slug || resource.slug;
---

<ResourceLayout
  title={resource.data.title}
  description={resource.data.description}
  slug={slug}
  datePublished={resource.data.datePublished}
  dateModified={resource.data.dateModified}
  author={resource.data.author}
  ogImage={resource.data.ogImage}
>
  <Content />
</ResourceLayout>
