---
import { generateBreadcrumbs } from '../utils/seo';
import type { BreadcrumbItem } from '../utils/schema';

interface Props {
  items?: BreadcrumbItem[];
}

const { items } = Astro.props;

// If items not provided, auto-generate from URL
const breadcrumbs = items || generateBreadcrumbs(Astro.url.pathname);
---

{breadcrumbs.length > 1 && (
  <nav aria-label="Breadcrumb" class="breadcrumbs">
    <ol class="flex items-center space-x-2">
      {breadcrumbs.map((item, index) => (
        <li class="flex items-center">
          {index > 0 && (
            <svg class="breadcrumb-separator w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          )}
          {index < breadcrumbs.length - 1 ? (
            <a href={item.url} class="breadcrumb-link hover:underline">
              {item.name}
            </a>
          ) : (
            <span class="breadcrumb-current" aria-current="page">
              {item.name}
            </span>
          )}
        </li>
      ))}
    </ol>
  </nav>
)}
