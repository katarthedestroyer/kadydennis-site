---
import navigation from '../data/navigation.json';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 border-t border-gray-100">
  <div class="container-site section-sm">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="text-xl font-bold text-gray-900">Kady Dennis</a>
        <p class="mt-4 text-gray-600 text-sm">
          AI operations consulting for travel agencies and small businesses. Systems that run while you sleep.
        </p>
        <div class="flex gap-4 mt-6">
          {navigation.social.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-brand-600 transition-colors"
              aria-label={social.platform}
            >
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Services</h3>
        <ul class="space-y-3">
          {navigation.footerNav.services.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-brand-600 transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Resources</h3>
        <ul class="space-y-3">
          {navigation.footerNav.resources.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-brand-600 transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Company</h3>
        <ul class="space-y-3">
          {navigation.footerNav.company.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-brand-600 transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <p class="mt-6 text-sm text-gray-600">
          <a href="mailto:kady@kadydennis.com" class="hover:text-brand-600 transition-colors">
            kady@kadydennis.com
          </a>
        </p>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-gray-200 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} Kady Dennis Consulting. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm text-gray-500">
        <a href="/privacy/" class="hover:text-brand-600 transition-colors">Privacy Policy</a>
        <a href="/terms/" class="hover:text-brand-600 transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
