---
interface Props {
  quote: string;
  author: string;
  company?: string | null;
  result?: string;
}

const { quote, author, company, result } = Astro.props;
---

<blockquote class="testimonial glass-card p-6 md:p-8">
  <svg class="w-10 h-10 text-accent-500/30 mb-4" fill="currentColor" viewBox="0 0 24 24">
    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
  </svg>

  <p class="testimonial-quote mb-6">"{quote}"</p>

  <footer class="flex items-center justify-between flex-wrap gap-4">
    <div>
      <cite class="testimonial-author not-italic">{author}</cite>
      {company && (
        <span class="testimonial-role block">{company}</span>
      )}
    </div>

    {result && (
      <div class="badge badge-accent whitespace-nowrap">
        {result}
      </div>
    )}
  </footer>
</blockquote>
