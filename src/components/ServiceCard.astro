---
interface Props {
  icon: string;
  title: string;
  description: string;
  price: string;
  href: string;
  bestFor?: string;
  timeline?: string;
}

const { icon, title, description, price, href, bestFor, timeline } = Astro.props;
---

<article class="glass-card service-card group">
  <!-- Header Section: Icon + Title (fixed height) -->
  <div class="service-card-header">
    <div class="service-card-icon">{icon}</div>
    <h3 class="service-card-title group-hover:text-accent-400 transition-colors">{title}</h3>
  </div>

  <!-- Description Section (flex-grow to push rest down) -->
  <div class="service-card-body">
    <p class="service-card-description">{description}</p>
  </div>

  <!-- Price Section (fixed position from bottom) -->
  <div class="service-card-pricing">
    <div class="service-card-price">{price}</div>
  </div>

  <!-- Meta Section: Best For + Timeline (fixed height) -->
  <div class="service-card-meta">
    {bestFor && (
      <p class="service-card-meta-item">
        <span class="service-card-meta-label">Best for:</span>
        <span class="service-card-meta-value">{bestFor}</span>
      </p>
    )}
    {timeline && (
      <p class="service-card-meta-item">
        <span class="service-card-meta-label">Timeline:</span>
        <span class="service-card-meta-value">{timeline}</span>
      </p>
    )}
  </div>

  <!-- Footer Section: CTA Button (always at bottom) -->
  <div class="service-card-footer">
    <a href={href} class="btn btn-secondary w-full">
      Learn More
    </a>
  </div>
</article>
