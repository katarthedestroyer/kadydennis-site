---
interface Props {
  headline: string;
  subheadline?: string;
  buttonText: string;
  buttonHref: string;
  variant?: 'primary' | 'light';
}

const {
  headline,
  subheadline,
  buttonText,
  buttonHref,
  variant = 'primary'
} = Astro.props;
---

{variant === 'primary' && (
  <section class="cta-section mt-16 text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-4">{headline}</h2>
    {subheadline && <p class="text-white/90 mb-8 max-w-xl mx-auto">{subheadline}</p>}
    <a href={buttonHref} class="btn bg-white text-dark-950 hover:bg-gray-100 btn-lg font-semibold">
      {buttonText}
    </a>
  </section>
)}

{variant === 'light' && (
  <section class="cta-section-light mt-16 text-center">
    <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">{headline}</h2>
    {subheadline && <p class="text-gray-400 mb-8 max-w-xl mx-auto">{subheadline}</p>}
    <a href={buttonHref} class="btn btn-primary btn-lg">
      {buttonText}
    </a>
  </section>
)}
